<form class="form-signin" action="/signup" method="post" name="test">
        <label for="login" class="sr-only">login</label>
        <input type="text" name="login" class="form-control" placeholder="Login" required autofocus maxlength="32">
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Password" required maxlength="32">
        <label for="firstname" class="sr-only">Firstname</label>
        <input type="text" name="firstname" class="form-control" placeholder="firstname" required maxlength="32">
        <label for="lastname" class="sr-only">Lastname</label>
        <input type="text" name="lastname" class="form-control" placeholder="lastname" required maxlength="32">
        <label for="email" class="sr-only">email</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" required maxlength="32">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
</form>
